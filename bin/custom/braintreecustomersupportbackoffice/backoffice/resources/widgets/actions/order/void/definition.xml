<action-definition id="com.braintree.customersupportbackoffice.actions.order.void"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">

    <name>void.action</name>
    <description>Void Action</description>
    <author>braintree</author>
    <version>0.1</version>

    <actionClassName>com.braintree.customersupportbackoffice.actions.order.voidorder.BraintreeVoidAction</actionClassName>
    <inputType>de.hybris.platform.core.model.order.OrderModel</inputType>
    <outputType>de.hybris.platform.core.model.order.OrderModel</outputType>

    <iconUri>icons/icon_action_void_default.png</iconUri>
