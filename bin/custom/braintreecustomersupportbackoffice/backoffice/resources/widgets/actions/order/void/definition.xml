    <iconHoverUri>icons/icon_action_void_hover.png</iconHoverUri>

    <settings>
        <setting key="viewMode" default-value="iconAndText"/>
    </settings>

    <!-- Sockets definition-->
    <sockets>
        <output id="voidContext"/>
    </sockets>

</action-definition>
