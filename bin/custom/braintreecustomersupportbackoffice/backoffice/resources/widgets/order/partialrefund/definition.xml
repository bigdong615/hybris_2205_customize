<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<widget-definition id="com.braintree.customersupportbackoffice.widgets.partialrefund"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widget-definition.xsd">

    <name>Partial Refund </name>
    <description>Partial Refund widget.</description>
    <defaultTitle>Partial Refund</defaultTitle>
    <author>braintree</author>
    <version>0.1</version>

    <sockets>
        <input type="de.hybris.platform.core.model.order.OrderModel" id="inputObject"/>
        <output type="de.hybris.platform.core.model.order.OrderModel" id="modifiedItem"/>
        <output type="java.lang.String" id="confirm"/>
    </sockets>

    <keywords>
        <keyword>Refund</keyword>
    </keywords>

    <controller class="com.braintree.customersupportbackoffice.widgets.order.partialrefund.BrainTreePartialRefundOrderController"/>

    <view src="partialrefund.zul"/>

</widget-definition>
