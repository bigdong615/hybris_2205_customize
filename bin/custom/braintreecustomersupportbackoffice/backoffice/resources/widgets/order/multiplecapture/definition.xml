<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<widget-definition id="com.braintree.customersupportbackoffice.widgets.multiplecapture"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widget-definition.xsd">

    <name>Multiple Capture</name>
    <description>Multiple Capture widget</description>
    <defaultTitle>Multiple Capture</defaultTitle>
    <author>braintree</author>
    <version>0.1</version>

    <sockets>
        <input type="de.hybris.platform.core.model.order.OrderModel" id="inputObject"/>
        <output type="de.hybris.platform.core.model.order.OrderModel" id="modifiedItem"/>
        <output type="java.lang.String" id="confirm"/>
    </sockets>

    <keywords>
        <keyword>MultipleCapture</keyword>
    </keywords>

    <controller class="com.braintree.customersupportbackoffice.widgets.order.multiplecapture.BrainTreeMultipleCaptureController"/>

    <view src="multiplecapture.zul"/>

</widget-definition>
