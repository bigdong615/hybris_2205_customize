<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<action-definition id="hybris.bin.custom.blbackoffice.blcustom.blCalculateAvalaraTaxAction"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">

    <name>blCalculateAvalaraTaxAction.action</name>
    <description>Update Avalara Tax Action</description>
    <author>hybris</author>
    <version>0.1</version>

    <actionClassName>com.bl.backoffice.actions.order.BlCalculateAvalaraTaxAction</actionClassName>
    <inputType>de.hybris.platform.core.model.order.OrderModel</inputType>
    <outputType>de.hybris.platform.core.model.order.OrderModel</outputType>

    <iconUri>icons/icon_action_updateTax_default.png</iconUri>
    <iconDisabledUri>icons/icon_action_updateTax_disabled.png</iconDisabledUri>
    <iconHoverUri>icons/icon_action_updateTax_hover.png</iconHoverUri>

    <settings>
        <setting key="viewMode" default-value="iconAndText"/>
    </settings>
    
    <!-- Sockets definition-->
    <sockets>
        <output id="blCustomAvalaraCalculationContext"/>
    </sockets>
</action-definition>